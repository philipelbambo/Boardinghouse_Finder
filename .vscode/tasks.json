{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows Debug",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "windows", "--debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build Windows Release",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "windows", "--release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Windows App",
            "type": "shell",
            "command": "flutter",
            "args": ["run", "-d", "windows"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}